<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3273b44">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardBackgroundColor="#e7ffffff"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_20sdp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="ID:"
                            android:textColor="#000"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:id="@+id/tv_u_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="107dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="107dp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="-"
                            android:textColor="#000"
                            android:textSize="@dimen/_15sdp" />

                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Name:"
                            android:textColor="#000"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:id="@+id/tv_u_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="107dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="107dp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="-"
                            android:textColor="#000"
                            android:textSize="@dimen/_15sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Gender:"
                            android:textColor="#000"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:id="@+id/tv_u_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="107dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="107dp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="-"
                            android:textColor="#000"
                            android:textSize="@dimen/_15sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Email ID:"
                            android:textColor="#000"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:id="@+id/tv_u_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="107dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="107dp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="-"
                            android:textColor="#000"
                            android:textSize="@dimen/_15sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Contact No:"
                            android:textColor="#000"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:id="@+id/tv_u_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="107dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="107dp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="-"
                            android:textColor="#000"
                            android:textSize="@dimen/_15sdp" />

                    </RelativeLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center|end"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_20sdp">

                <Button
                    android:onClick="ShowPopupEditProfile"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@drawable/btn"
                    android:text="Edit Profile"
                    android:textColor="#000" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>